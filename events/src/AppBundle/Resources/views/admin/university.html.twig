{% extends 'AppBundle::admin_base.html.twig' %}

{% block content %}

    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                University
                <small>Control panel</small>
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                <li class="active">University</li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">

            <div class="row">

                <div class="col-xs-12">
                    <div class="box">
                        <div class="box-header">
                            <h3 class="box-title">University List</h3>
                        </div>
                        <!-- /.box-header -->
                        <div class="box-body">
                            <table id="university_list" class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>City</th>
                                        <th>University Name</th>
                                        <th>Campus</th>
                                        <th>Link</th>
                                        <th>Active</th>
                                        <th>Operation</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    {% for university in universities %}
                                        <tr>
                                            <td>{{ university.university_city }}</td>
                                            <td>{{ university.university_name }} </td>
                                            <td>Main</td>
                                            <td><a href="{{ university.university_link }}" target="_blank">{{ university.university_link }}</a></td>
                                            <td>
                                                {% if university.university_active %}
                                                    Active
                                                {% else %}
                                                    Not Active
                                                {% endif %}
                                            </td>
                                            <td>
                                                <div class="btn-group">
                                                    <button type="button" class="btn btn-info">Action</button>
                                                    <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown">
                                                        <span class="caret"></span>
                                                        <span class="sr-only">Toggle Dropdown</span>
                                                    </button>
                                                    <ul class="dropdown-menu" role="menu">
                                                        <li><a href="{{ path('university_put', {'universityId': university.university_id}) }}">Edit</a></li>
                                                        <li><a href="{{ path('university_delete', {'universityId': university.university_id}) }}">Delete</a></li>
                                                    </ul>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}

                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>City</th>
                                        <th>University Name</th>
                                        <th>Campus</th>
                                        <th>Link</th>
                                        <th>Active</th>
                                        <th>Operation</th>
                                    </tr>
                                </tfoot>
                            </table>

                        </div>
                        <!-- /.box-body -->
                    </div>
                    <!-- /.box -->
                </div>
                <!-- /.col-xs-12 -->

            </div>
            <!-- /.row -->
        </section>
        <!-- /.content -->
    </div>

{% endblock %}