<!DOCTYPE html>
<html>


    <!-- ----------------------------------- -->
    <!-- ------------ HTML HEAD ------------ -->
    <!-- ----------------------------------- -->
    <head>
        <meta charset="UTF-8" />
        <!--[if IE]><meta http-equiv="X-UA-Compatible" content="IE=edge"><![endif]-->
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" />
        <meta name="description" content="Guppy Events">
        <meta name="keywords" content="Events">
        <meta name="author" content="Kemal Sami KARACA">

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

        <title>{% block title %}Guppy - Anasayfa{% endblock %}</title>

        {% stylesheets
                'theme/assets/css/custom-animations.css'
                'theme/assets/css/style.css'
                'theme/assets/css/guppy-ui.css' filter='cssrewrite' %}
            <link rel="stylesheet" type="text/css" href="{{ asset_url }}" />
        {% endstylesheets %}

            <!-- jquery ui -->
            <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">

        {% block stylesheets %}{% endblock %}

        <!--[if lt IE 9]>
            <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
            <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->

    </head>


    <!-- ----------------------------------- -->
    <!-- ------------ HTML BODY ------------ -->
    <!-- ----------------------------------- -->
    <body>

        <!-- ------------ PRELOADER ------------ -->
        <div class="preloader-mask">
            <div class="preloader"></div>
        </div>

        <!-- ------------ HEADER ------------ -->
        <header class="header header-black fixed" style="min-height: 100px;">
            <div class="header-wrapper">
                <div class="container">
                    <div class="col-sm-2 col-xs-12 navigation-header">
                        <a href="{{ path("homepage") }}" class="logo">
                            <img src="" alt="Guppy" width="80" height="40" class="retina-hide">
                            <img src="" alt="Guppy" width="80" height="40" class="retina-show">
                        </a>
                        <button class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navigation" aria-expanded="false" aria-controls="navigation">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>

                    <div class="col-sm-10 col-xs-12 navigation-container">
                        <div id="navigation" class="navbar-collapse collapse">
                            <ul class="navigation-list pull-left light-text">
                                <li class="navigation-item"><a href="{{ path("home_about") }}" class="navigation-link">Hakkında</a></li>
                                <li class="navigation-item"><a href="{{ path("home_communities") }}" class="navigation-link">Kulüpler</a></li>
                                <li class="navigation-item"><a href="{{ path("home_events") }}" class="navigation-link">Etkinlikler</a></li>
                                {#<li class="navigation-item"><a href="{{ path("login") }}" class="navigation-link">Yönetici Sayfasına Git</a></li>#}
                            </ul>

                            <ul class="navigation-list pull-right light-text">
                                {% if app.user %}

                                    <li class="navigation-item dropdown">
                                        <a class="navigation-link dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user" aria-hidden="true"></i>{{ app.user.name }}</a>
                                        <ul class="dropdown-menu">
                                            <li class="navigation-item"><a href="{{ path('user_profile_account') }}" class="navigation-link">Profil</a></li>
                                            {% if app.user.role == 'ROLE_ADMIN' %}
                                                <li class="navigation-item"><a href="{{ path("login") }}" class="navigation-link">Yönetim Sayfası</a></li>
                                            {% endif %}
                                            <li class="navigation-item"><a href="{{ path('logout') }}" class="navigation-link">Çıkış</a></li>
                                        </ul>
                                    </li>

                                {% else %}
                                    <li class="navigation-item"><a href="{{ path("user_registration") }}" class="navigation-link">Kayıt</a></li>
                                    <li class="navigation-item"><a href="{{ path("login") }}" class="navigation-link">Giriş</a></li>
                                {% endif %}
                            </ul>

                        </div>
                    </div>
                </div>
            </div>
        </header>

        <div class="guppy-container">
            {% block content %}{% endblock %}
        </div>

        <!-- ------------ FOOTER ------------ -->
        <section class="footer">

            <div class="footer-base">
                <div class="container">

                    <div class="col-md-6">
                        <ul class="footer-nav">
                            <li class="footer-nav-item"><a href="#">Contact</a></li>
                            <li class="footer-nav-item"><a href="#">Privacy policy</a></li>
                            {#<li class="footer-nav-item"><a href="#">Press</a></li>#}
                        </ul>
                    </div>

                    <div class="col-md-6 align-right">
                        <ul class="socials-nav align-right">
                            <li class="socials-nav-item"><a href="https://github.com/GuppyEvents/guppy_events" target="_blank"><span class="fa fa-github"></span></a></li>
                            <li class="socials-nav-item"><a href="#"><span class="fa fa-google-plus"></span></a></li>
                            <li class="socials-nav-item"><a href="#"><span class="fa fa-twitter"></span></a></li>
                            <li class="socials-nav-item"><a href="#"><span class="fa fa-facebook"></span></a></li>
                            <li class="socials-nav-item"><a href="#"><span class="fa fa-instagram"></span></a></li>
                            {#<li class="socials-nav-item"><a href="#"><span class="fa fa-vimeo-square"></span></a></li>#}
                        </ul>

                        <p class="text-alt"><small>All Rights Reserved © 2016</small></p>
                    </div>
                </div>
            </div>
        </section>


        {% javascripts
                'plugins/jQuery/jQuery-2.2.0.min.js'
                'theme/assets/js/bootstrap.min.js'
                'theme/assets/js/jquery.validate.min.js'
                'theme/assets/js/toastr.min.js'
                'theme/assets/js/jquery.waypoints.min.js'
                'theme/assets/js/jquery.appear.js'
                'theme/assets/js/jquery.plugin.js'
                'theme/assets/js/jquery.countTo.js'
                'theme/assets/js/jquery.countdown.js'
                'theme/assets/js/masonry.pkgd.min.js'
                'theme/assets/js/modal-box.js'
                'theme/assets/js/guppy.js' %}
            <script src="{{ asset_url }}"></script>
        {% endjavascripts %}

            <!-- jquery ui -->
            <!-- datepicker used -->
            <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

        {% block javascriptcontent %}{% endblock %}


        <!-- ------------ GUPPY MAIN JS ------------ -->
        <script>

            // -1- setting footer posisition
            $('.guppy-container').css('min-height' , $( window ).height() - $('.header').height() - $('.footer').height() -50 );

            $(window).on('resize',function(event){
                $('.guppy-container').css('min-height' , $( window ).height() - $('.header').height() - $('.footer').height() -50 );
            });

        </script>


    </body>
</html>
