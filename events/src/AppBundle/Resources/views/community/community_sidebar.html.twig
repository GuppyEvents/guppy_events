

        <!-- -------------- SIDEBAR -------------- -->
        <div class="ge-community-left-sidebar align-left col-md-2 col-sm-3">
            <div class="ge-community-logo-area">
                <div class="ge-community-logo">
                    <img src="{{ community.imageBase64 }}" alt="{{ community.name }}" class="img-responsive" />
                </div>
            </div>
            <div class="ge-community-name">
                <h3>{{ community.name }}</h3>
            </div>
            <ul class="ge-community-sidebar-menu ge-menu-group">
                {% if seruvent is defined and seruvent==true %}
                    <li class="{% if app.request.get('_route') == 'seruvent_events'%}active{% endif %}"><a href="{{ path('seruvent_events') }}" class="ge-menu-group-item">Etkinlikler</a></li>
                    <li class="{% if app.request.get('_route') == 'seruvent_about'%}active{% endif %}"><a href="{{ path('seruvent_about') }}" class="ge-menu-group-item">Genel Bilgi</a></li>
                    <li class="{% if app.request.get('_route') == 'seruvent_member'%}active{% endif %}"><a href="{{ path('seruvent_member') }}" class="ge-menu-group-item">Üyeler</a></li>
                {% else %}
                    <li class="{% if app.request.get('_route') == 'user_community_events_homepage'%}active{% endif %}"><a href="{{ path('user_community_events_homepage', {'communityId': community.id}) }}" class="ge-menu-group-item">Etkinlikler</a></li>
                    <li class="{% if app.request.get('_route') == 'user_community_homepage'%}active{% endif %}"><a href="{{ path('user_community_homepage', {'communityId': community.id}) }}" class="ge-menu-group-item">Genel Bilgi</a></li>
                    <li class="{% if app.request.get('_route') == 'user_community_users_homepage'%}active{% endif %}"><a href="{{ path('user_community_users_homepage', {'communityId': community.id}) }}" class="ge-menu-group-item">Üyeler</a></li>
                    {% if isUserCommunityAdmin is defined and isUserCommunityAdmin %}
                        <li class="{% if app.request.get('_route') == 'user_community_membership_applications_homepage'%}active{% endif %}"><a href="{{ path('user_community_membership_applications_homepage', {'communityId': community.id}) }}" class="ge-menu-group-item">Başvurular</a></li>
                    {% endif %}
                {% endif %}
            </ul>

            {% if isUserCommunityAdmin is defined and isUserCommunityAdmin %}
                <div class="ge-community-sidebar-action">
                    <button class="ge-community-action-btn" onclick="window.location.href='{{ path('event_add_page') }}'" type="submit"><i class="fa fa-plus"></i>Etkinlik Oluştur</button>
                </div>
            {% endif %}

        </div>
