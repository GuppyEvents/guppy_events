{% extends 'AppBundle::admin_base.html.twig' %}

{% block content %}

    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Community
                <small>Control panel</small>
            </h1>
            <ol class="breadcrumb">
                <li><a href="{{ path('admin_homepage') }}"><i class="fa fa-dashboard"></i> Home</a></li>
                <li><a href="{{ path('community_list') }}"></i> Community</a></li>
                <li class="active">Edit</li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">

            <div class="row">


                <div class="col-md-12">
                    <div class="box box-info">
                        <div class="box-header with-border">
                            <h3 class="box-title">Community Update Page</h3>
                        </div>
                        <!-- /.box-header -->
                        <div class="box-body">

                            {#{{ form_start(form, {'attr': {'role': 'form'}}) }}#}
                            <form action="{{ path('community_put' , {'communityId': community.id}) }}" method="post">

                                <!-- text input -->
                                <div class="form-group">
                                    <label>Community Name</label>
                                    <input type="text" class="form-control" name="community_name" placeholder="Enter Community Name" value="{{ community.name }}">
                                </div>

                                <!-- text input -->
                                <div class="form-group">
                                    <label>Community Description</label>
                                    <textarea class="form-control" rows="3" name="community_description" placeholder="Enter Community Description">{{ community.description }}</textarea>
                                </div>

                                <!-- community Image -->
                                <div class="form-group">
                                    <label>Community Image</label>
                                    <input id="temp_img_loader" type='file'>
                                    <img id="img_viewer" height="150" src="{{ community.imageBase64 }}">
                                    <input type="text" class="form-control" id="community_image_base64" name="community_image_base64" style="display: none;" value="{{ community.imageBase64 }}">
                                </div>

                                <button type="submit">Update !</button>
                            </form>
                            {#{{ form_end(form) }}#}

                        </div>
                        <!-- /.box-body -->
                    </div>
                    <!-- /.box -->
                </div>
                <!-- /.column -->

            </div>
            <!-- /.row -->
        </section>
        <!-- /.content -->
    </div>

{% endblock %}


{% block javascriptcontent %}
    <script>

/***********************************************************************************************************************
 *                                          GLOBAL VARIABLE
 **********************************************************************************************************************/
        var debugMode = true;

/***********************************************************************************************************************
 *                                          UTIL FUNCTIONS
 **********************************************************************************************************************/
        function fileToBase64Converter() {
            if (this.files && this.files[0]) {
                var FR= new FileReader();
                FR.onload = function(e) {
                    $('#img_viewer').attr('src', e.target.result);
                    $('#community_image_base64').val(e.target.result);
                };
                FR.readAsDataURL( this.files[0] );
            }
        }

/***********************************************************************************************************************
 *                                          AJAX OPERATIONS
 **********************************************************************************************************************/
        function ajaxGetBoroughListByCity(cityId){

            // -- 1 --
            // open alert box to inform user

            // -- 2 --
            // ajax call
            $.post("{{ path('university_borough_list') }}" , {
                cid : cityId

            }).always(function(){


            }).done(function(data){

                // -- 2.1 -- CONSOLE
                if(debugMode)
                    console.log(data);

                // -- 2.2 -- sonuc d√ºzenlenir
                if(data.resultText == 'SUCCESS'){

                    // -- 2.2.1 -- remove options
                    $('#address_borough_id').children().remove();

                    // -- 2.2.2 -- insert new options
                    data.content.forEach(function(borough) {
                        $('#address_borough_id').append($('<option>', {
                            value: borough['borough_id'],
                            text: borough['borough_name']
                        }));
                    });

                }else if(data.resultText == 'SUCCESS_EMPTY'){
                    alert('Warning -- ' + ' could not found any borough');
                }else if(data.resultText == 'FAILURE_PERMISSION'){
                    alert('Warning -- ' + ' you are not authorization for this operation');
                }else{
                    alert('Warning -- ' + ' error occured while getting borough list');
                }
            });
        }


/***********************************************************************************************************************
 *                                          EVENTS
 **********************************************************************************************************************/
        $('#address_city_id').on('change',function (event) {
            ajaxGetBoroughListByCity($(event.target).val());
        });


/***********************************************************************************************************************
 *                                          DOCUMENT ON READY
 **********************************************************************************************************************/
        // -- File to base64
        document.getElementById("temp_img_loader").addEventListener("change", fileToBase64Converter, false);


    </script>
{% endblock %}
