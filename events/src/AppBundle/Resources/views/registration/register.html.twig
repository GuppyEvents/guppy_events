<!doctype html>
<html lang="en">
    <head>

        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

        <title>Seruvent - Kayıt</title>

        {% stylesheets
                'bootstrap/css/bootstrap.min.css'
                'https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css'
                'https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css'
                'dist/css/AdminLTE.min.css'
                'plugins/iCheck/square/blue.css' filter='cssrewrite' %}
            <link rel="stylesheet" type="text/css" href="{{ asset_url }}" />
        {% endstylesheets %}

        <!--[if lt IE 9]>
        {% javascripts
                'https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js'
                'https://oss.maxcdn.com/respond/1.4.2/respond.min.js' %}
            <script src="{{ asset_url }}"></script>
        {% endjavascripts %}
        <![endif]-->

    </head>

    <body class="hold-transition register-page">
        <script>

        </script>

        <div class="register-box">
            <div class="register-logo">
                <a href="{{ path('home_communities') }}"><b>Seru</b>vent</a>
            </div>

            <div class="register-box-body">

                <fb:login-button
                        scope="public_profile,email"
                        onlogin="checkLoginState();">
                </fb:login-button>

                <p class="login-box-msg">Kullanıcı Kayıt Sayfası</p>

                {{ form_start(form, {'action': path('user_registration'), 'method': 'POST'}) }}
                    <div class="form-group has-feedback">
                        {{ form_widget(form.name, {'attr': {'class': 'form-control register-name' , 'placeholder':'İsim' , 'oninput':'checkValidation(this , "İsim boş bırakılamaz")', 'oninvalid':'checkValidation(this , "İsim boş bırakılamaz")'}}) }}
                        <span class="glyphicon glyphicon-user form-control-feedback"></span>
                    </div>
                    <div class="form-group has-feedback">
                        {{ form_widget(form.surname, {'attr': {'class': 'form-control' , 'placeholder':'Soyadı', 'oninput':'checkValidation(this , "Soyadı boş bırakılamaz")', 'oninvalid':'checkValidation(this , "Soyadı boş bırakılamaz")' }}) }}
                        <span class="glyphicon glyphicon-user form-control-feedback"></span>
                    </div>
                    <div class="form-group has-feedback">
                        {{ form_widget(form.username, {'attr': {'class': 'form-control', 'placeholder':'Kullanıcı Adı', 'oninput':'checkValidation(this , "Kullanıcı adını boş bırakmayınız")', 'oninvalid':'checkValidation(this , "Kullanıcı adını boş bırakmayınız")'}}) }}
                        <span class="glyphicon glyphicon-user form-control-feedback"></span>
                    </div>
                    <div class="form-group has-feedback">
                        {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder':'Bilkent Mail Adresiniz' , 'oninput':'checkValidation(this , "@ug.bilkent.edu.tr içermeli")', 'oninvalid':'checkValidation(this , "@ug.bilkent.edu.tr içermeli")' }}) }}
                        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                    </div>
                    <div class="form-group has-feedback">
                        {{ form_widget(form.password.first, {'attr': {'class': 'form-control', 'placeholder':'Şifre' , 'oninput':'checkValidation(this , "Şifre boş bırakılamaz")', 'oninvalid':'checkValidation(this , "Şifre boş bırakılamaz")' }}) }}
                        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                    </div>
                    <div class="form-group has-feedback">
                        {{ form_widget(form.password.second, {'attr': {'class': 'form-control', 'placeholder':'Şifre Tekrar' ,'oninput':'checkValidation(this , "Şifre tekrarı boş bırakılamaz")','onchange':'checkPasswordValidation(this , "Şifreleriniz uyuşmamaktadır")' }}) }}
                        <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
                    </div>
                    <div style="display: none;" class="form-group has-feedback">
                        {{ form_widget(form.fbId, {'attr': {'class': 'form-control', 'placeholder':'Token' }}) }}
                        <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
                    </div>
                    <div class="row">
                        <div class="col-xs-8">
                            <div class="checkbox icheck">
                                <label>

                                    {{ form_widget(form.termsAccepted, {'attr': {'class': 'form-control'}}) }}
                                    <a href="#">Şartları</a> kabul ediyorum
                                </label>
                            </div>
                        </div>
                        <!-- /.col -->
                        <div class="col-xs-4">
                            <button id='register_submit' type="submit" class="btn btn-primary btn-block btn-flat">Kayıt</button>
                        </div>
                        <!-- /.col -->
                    </div>
                {{ form_end(form) }}

                <div class="social-auth-links text-center">
                    <p>- YA DA -</p>
                    <a onclick="loginFacebook()" class="btn btn-block btn-social btn-facebook btn-flat"><i class="fa fa-facebook"></i> Facebook ile Kaydol</a>
                    <a onclick="logoutFacebook()" class="btn btn-block btn-social btn-google btn-flat"><i class="fa fa-google-plus"></i> Google+ ile Kaydol</a>
                </div>

                <a href="{{ path('login') }}" class="text-center">Seruvent hesabı ile giriş yap</a>

            </div>
            <!-- /.form-box -->
        </div>
        <!-- /.register-box -->

        {% javascripts
                'plugins/jQuery/jQuery-2.2.0.min.js'
                'bootstrap/js/bootstrap.min.js'
                'plugins/iCheck/icheck.min.js' %}
            <script src="{{ asset_url }}"></script>
        {% endjavascripts %}

        <script>

            var error_msg = '{% if error_msg is defined %}{{ error_msg|json_encode|raw }}{% endif %}';
            var success_msg = '{% if success_msg is defined %}{{ success_msg|json_encode|raw }}{% endif %}';

            function checkPasswordValidation(input , message){
                if(input.value=="" || input.value!=document.getElementById('user_password_first').value){
                    input.setCustomValidity(message);
                }else{
                    input.setCustomValidity("");
                }
            }

            function checkValidation(input , message) {
                if(input.value==""){
                    input.setCustomValidity(message);
                }else{
                    input.setCustomValidity("");
                }
            }

            $(function () {
                $('input').iCheck({
                    checkboxClass: 'icheckbox_square-blue',
                    radioClass: 'iradio_square-blue',
                    increaseArea: '20%' // optional
                });

                // -- Operation Result Message
                if(success_msg){
                    alert(success_msg);
                }else if(error_msg){
                    alert(error_msg);
                }

            });


            window.fbAsyncInit = function() {
                FB.init({
                    appId      : '1807236222874605',
                    cookie     : true,
                    xfbml      : true,
                    version    : 'v2.8'
                });
                FB.AppEvents.logPageView();

                FB.getLoginStatus(function(response) {
                    console.log(response);

                });
            };

            function checkLoginState() {
                FB.getLoginStatus(function(response) {
                    statusChangeCallback(response);
                });
            }

            function statusChangeCallback(response){
                if (response.status === 'connected') {
                    registerUser(response);
                } else if (response.status === 'not_authorized') {
                    // The person is logged into Facebook, but not your app.
                    FB.login(function(response) {
                        statusChangeCallback(response);
                    },{
                        scope: 'email, public_profile',
                        return_scopes: true
                    });
                } else {
                    // The person is not logged into Facebook, so we're not sure if
                    // they are logged into this app or not.
                    FB.login(function(response) {
                        statusChangeCallback(response);
                    },{
                        scope: 'email, public_profile',
                        return_scopes: true
                    });
                }
            }

            (function(d, s, id){
                var js, fjs = d.getElementsByTagName(s)[0];
                if (d.getElementById(id)) {return;}
                js = d.createElement(s); js.id = id;
                js.src = "//connect.facebook.net/en_US/sdk.js";
                fjs.parentNode.insertBefore(js, fjs);
            }(document, 'script', 'facebook-jssdk'));

            function loginFacebook(){
                checkLoginState();
            }
            function registerUser(response1) {
                console.log('Welcome!  Fetching your information.... ');
                FB.api('/me?fields=id,name,email,permissions', function(response) {
                    $("form").attr("action", "/registerFacebook");
                    var name=" ", surname=" ";
                    if(response.name.lastIndexOf(" ")!=-1){
                        name = response.name.substring(0, response.name.lastIndexOf(" "));
                        surname = response.name.substring(response.name.lastIndexOf(" ")+1);
                    }else{
                        name = response.name;
                        surname = response.name;
                    }
                    $("form input[name='user[name]']").val(name);
                    $("form input[name='user[surname]']").val(surname);
                    $("form input[name='user[username]']").val(response.email);
                    $("form input[name='user[email]']").val(response.email);
                    $("form input[name='user[email]']").val(response.email);
                    $("form input[name='user[password][first]']").val("_________________");
                    $("form input[name='user[password][second]']").val("_________________");
                    $("form input[name='user[termsAccepted]']").attr("checked", true);
                    $("form input[name='user[fbId]']").val(response1.authResponse.accessToken);
                    $("form").submit();
                 });

            }

            function logoutFacebook(){
                FB.logout(function(response) {
                    console.log(response);
                });
            }


        </script>
    </body>

</html>

